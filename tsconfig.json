{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["src/app/*"],
      "@config/*": ["src/config/*"],
      "@handler/*": ["src/handler/*"],
      "@libraries/*": ["src/libraries/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"]
    },
    "strict": true,
    "noEmit": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/app.ts",
    "src/**/*.ts",
    "**/*.test.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
